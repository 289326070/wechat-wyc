/* pages/my/journey/journey.wxss */
@import '../../../utils/css/iconfont.wxss';

page {
  background: #fafafa;
}
.container{padding-bottom:10px;}
.journey-box {
  background: #fff;
  padding: 20px 17px;
  -webkit-border-radius: 8px;
  border-radius: 8px;
  font-size: 16px;
  color: #666;
  box-shadow:0px 0px 5px 0px rgba(0, 0, 0, .2);
  margin-top:15px;
}
.journey-box>view{
  margin-bottom:10px;
}
.journey-box>view:last-child{
  margin-bottom:0px;
}
.icon-shijian::before{
  font-size: 10px;
  margin-right:8px;
  margin-top:-5px;
}
.icon-sanjiao-r{
  font-size: 16px;
  margin-left: 8px;
  font-weight: bold;
}
.yuan-green,.yuan-red{
  margin-right:10px;
}
.pull_text{
  margin-top:10px;
  line-height:20px;
  text-align: center;

}